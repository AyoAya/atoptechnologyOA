@import './variable.styl'

body, h1, h2, h3, h4, h5, h6, p
	margin: 0
	padding: 0
ul, ol, dl
	margin: 0
p
	line-height: 180%
body
	color: common-text-color
	font-size: 14px
	font-family: "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif
	

/* 复写elementUI部分组件样样式*/


.fl-card
	background: white-color
	margin-bottom: 20px
	&:last-child
		margin-bottom: 0
	.fl-card-header
		padding: 20px
		width: 100%
		box-sizing: border-box
		border-bottom: solid 1px bd-color
		display: table
		min-height: 73px
		.fl-card-hl, .fl-card-hr
			display: table-cell
			vertical-align: middle
		.fl-card-hl
			text-align: left
		.fl-card-hr
			text-align: right
			.el-button
				padding: 0
				margin-left: 20px
			.el-input
				width: auto
				margin-left: 20px
	.fl-card-body
		padding: 20px
.tree-table
	width: 100%
	border: none
	tr:nth-child(odd)
		background: #f9f9f9
	tr:hover
		background: bd-color
	td
		padding: 15px
	td:first-child
		width: 25%
		font-weight: 600